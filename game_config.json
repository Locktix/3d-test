{
    "graphics": {
        "resolution": [
            1280,
            720
        ],
        "fullscreen": false,
        "vsync": true,
        "fps_limit": 60,
        "render_distance": 100,
        "shadows": true,
        "antialiasing": true
    },
    "audio": {
        "master_volume": 1.0,
        "music_volume": 0.7,
        "sfx_volume": 0.8,
        "voice_volume": 0.9,
        "enable_audio": true
    },
    "controls": {
        "mouse_sensitivity": 1.0,
        "invert_mouse_y": false,
        "keyboard_layout": "qwerty",
        "gamepad_enabled": false
    },
    "gameplay": {
        "difficulty": "normal",
        "auto_save": true,
        "auto_save_interval": 300,
        "show_hints": true,
        "show_minimap": true,
        "show_health_bars": true,
        "show_damage_numbers": true
    },
    "ai": {
        "enemy_aggression": 1.0,
        "enemy_detection_range": 1.0,
        "enemy_speed": 1.0,
        "npc_interaction_range": 3.0,
        "enemy_respawn_time": 60
    },
    "ui": {
        "ui_scale": 1.0,
        "show_fps": true,
        "show_coordinates": false,
        "show_debug_info": false,
        "language": "french"
    },
    "save": {
        "max_save_slots": 10,
        "auto_backup": true,
        "backup_interval": 24,
        "save_directory": "saves/"
    }
}